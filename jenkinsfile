pipeline {
agent any //instruct Jenkins to run the pipeline on any available agent (server/node)
tools {
maven 'Maven-3.9.11'
jdk 'JDK17'
}
stages {
stage('checkout') {
steps {
git branch:'main', url: 'https://github.com/Divz1991/jenkins-maven-demo.git'
checkout scm
}
}
stage('Build') {
steps {
bat 'mvn clean package'
}
}
stage ('Test') {
steps {
bat 'mvn test'
}
}
stage ('Report')
{
steps {
junit 'target/surefire-reports/*.xml'
}
}
}
}

